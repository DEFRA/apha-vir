@model CharacteristicSearchViewModel
<div id="characteristicSearch" class="characteristic-block">
    <div>
        <table  class="p-0 m-0 ">
            <thead><tr><th></th></tr></thead>
            <tbody>
                <tr>
                    <td colspan="5">
                    <select asp-for="Characteristic" tabindex="2" class="select-dropdown characteristic-ddl">
                        <option value=""></option>
                        @foreach (var item in Model.CharacteristicList)
                        {
                            <option value="@item.Value" data-type="@item.DataType">@item.Text</option>
                        }                                             
                    </select>
                    <input type="hidden" asp-for="CharacteristicType" class="characteristic-ddl-type" />
                    </td>
                </tr>
                <tr>
                    <td class="p-0 m-0">
                        <select class="p-0 m-0 comparator-ddl" asp-for="Comparator" hidden>
                        </select>
                    </td>
                    <td class="p-0 m-0">
                        <select asp-for="CharacteristicListValue" class="p-0 m-0 char-list-values-ddl" hidden>
                        </select>
                    </td>
                    <td class="p-0 m-0">
                        <input type="text" asp-for="CharacteristicValue1" class="width-90 char-value1" hidden>
                    </td>
                    <td class="p-0 m-0">
                        <span class="mx-3 width-90 char-and-label" hidden>and</span>
                    </td>
                    <td class="p-0 m-0 ">
                        <input type="text"  asp-for="CharacteristicValue2" class="width-90 char-value2" hidden>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>