@model LookupItemListViewModel

@if (Model != null && Model.LookupItems.Any())
{
	<table class="isolatereporttable">
		<thead>
			<tr class=".isolatereport-header">
				<th>Name</th>
				@if (Model.ShowAlternateName)
				{
					<th>Alternate Name</th>
				}
				@if (Model.ShowParent)
				{
					<th>Parent Name</th>
				}
				<th>Active</th>
				@if (Model.ShowSMSRelated)
				{
					<th>SMS</th>
					<th>SMSCode</th>
				}
				<th>Edit</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.LookupItems)
			{
				<tr>
					<td>@item.Name</td>
					@if (Model.ShowAlternateName)
					{
						<td>@item.AlternateName</td>
					}
					@if (Model.ShowParent)
					{
						<td>@item.ParentName</td>
					}
					<td>@item.Active</td>
					@if (Model.ShowSMSRelated)
					{
						<td>@item.Sms</td>
						<td>@item.Smscode</td>
					}
					<td>
						<a asp-action="Edit" asp-route-lookupid="@Model.LookupId" asp-route-lookupItemId="@item.Id"
						   class="btn btn-primary">Edit</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<div id="girdPagination" class="pagination" style="text-align:right">
		@await Component.InvokeAsync("Pagination", Model.Pagination)
	</div>
}
else
{
	<p>There are no entries recorded for this look-up list.</p>
}