@using Apha.VIR.Web.Controllers
@model IsolateDispatchConfirmatioViewModel
<table class="no-top-space mt-0 pt-0" style="border-spacing:0;">
    <tr>
        <th colspan="3"></th>
    </tr>
    <tr>
        <td colspan="3" class="pt-0">
            <p class="success-message  mt-0 pt-0" >
                <strong style="color: green;">@Model.DispatchConfirmationMessage</strong>
            </p>
        </td>
    </tr>
    <tr>
        <td>No. Of Aliquots Remaining</td>
        <td></td>
        <td>
            @Model.RemainingAliquots
        </td>
    </tr>
</table>

@*     <h2>Dispatch History</h2> *@

<div class="isolate-grid-table mt-3">
    <table class="VIRtable">
        <thead>
            <tr>
                <th class="view-isolate-details-label2">No of Aliquots</th>
                <th class="view-isolate-details-label2">Passage Number</th>
                <th class="view-isolate-details-label2">Recipient Name</th>
                <th class="view-isolate-details-label2">Recipient Address</th>
                <th class="view-isolate-details-label2">Reason For Dispatch</th>
                <th class="view-isolate-details-label2">Dispatched By</th>
                <th class="view-isolate-details-label2">Dispatched Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DispatchHistorys)
            {
                <tr>
                    <td>@item.NoOfAliquots</td>
                    <td>@item.PassageNumber</td>
                    <td>@item.RecipientName</td>
                    <td>@item.RecipientAddress</td>
                    <td>@item.ReasonForDispatch</td>
                    <td>@item.DispatchedByName</td>
                    <td>@item.DispatchedDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<p>
    <a asp-action="Search" asp-controller="SearchRepository">Return to the Search Repository Page</a>
</p>