@using Apha.VIR.Web.Controllers
@model IsolateViabilityHistoryViewModel
@{
	ViewData["Title"] = "Isolate Viability History | Virus Isolates Repository";
}
<p>
	<strong>@Model.Nomenclature</strong>
</p>

@if (Model.ViabilityHistoryList.Any())
{
	<div class=" mt-3">
		<table class="VIRtable" >
			<thead>
				<tr>
					<th class="view-isolate-details-label2">Viable</th>
					<th class="view-isolate-details-label2">Date Checked</th>
					<th class="view-isolate-details-label2">Checked By</th>
					<th class="view-isolate-details-label2"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.ViabilityHistoryList)
				{
					<tr>
						<td>@item.ViableName</td>
						<td>@item.DateChecked.ToString("d")</td>
						<td>@item.CheckedByName</td>
						<td>
							<a asp-action="Edit" asp-route-AVNumber="@item.AVNumber" asp-route-Isolate="@item.IsolateViabilityIsolateId" 
							asp-route-IsolateViabilityId="@item.IsolateViabilityId" class="btn btn-primary">Edit</a>

							<form asp-action="Delete"
								  asp-controller="IsolateViability"
								  method="post"
								  class="inline-form">

								<input type="hidden" name="IsolateViabilityId" value="@item.IsolateViabilityId" />
								<input type="hidden" name="LastModified" value="@Convert.ToBase64String(item.LastModified)" />
								<input type="hidden" name="AVNUmber" value="@item.AVNumber" />
								<input type="hidden" name="IsolateId" value="@item.IsolateViabilityIsolateId" />
								<button type="submit"
										class="btnLink"
										onclick="return confirm('Please confirm that you want to delete this viability record');">
									Delete
								</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	@if (!ViewData.ModelState.IsValid)
	{
		<div id="validationSummary" class="validation">
			<p>There are validation messages requiring your attention.</p>
			<div asp-validation-summary="All" class="validation"></div>
		</div>
	}
}
else
{
	<p>There are no viability records available for this isolate</p>
}

<a asp-action="ViewIsolateDetails" asp-controller="Isolates" asp-route-IsolateId="@Model.IsolateId" class="btn btn-secondary">
	Return to Isolate Details page
</a>