@model IsolateDispatchReportViewModel
@{
    ViewData["Title"] = "Isolate Dispatch Report | Virus Isolates Repository";
}

<div id="contentbox">
    <h2 class="box_title">Report Criteria</h2>
    <div class="box_body">
        <form asp-action="GenerateReport" method="post">
            <table>
                <tr>
                    <td><label asp-for="DateFrom">Date From</label></td>
                    <td><img src="~/Images/spacer.gif" width="10" height="5" alt="" /></td>
                    <td>
                        <input asp-for="DateFrom" class="datepicker" />
                        <span asp-validation-for="DateFrom" class="text-danger"></span>
                    </td>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="DateTo">Date To</label></td>
                    <td><img src="~/Images/spacer.gif" width="10" height="5" alt="" /></td>
                    <td>
                        <input asp-for="DateTo" class="datepicker" />
                        <span asp-validation-for="DateTo" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a asp-action="ExportToExcel" type="submit"  class="btn btn-secondary">Export to Excel</a>
                        @* <a id="repolinkExport" href="@Url.Action("ExportToExcel", "Reports")">Export to Excel</a> *@
                    </td>
                    <td>&nbsp;</td>
                    <td class="text-right">
                        <button type="submit" class="btn btn-primary">Generate Report</button>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>

<br />

@if (Model.ReportData != null && Model.ReportData.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>AV Number</th>
                <th>Nomenclature</th>
                <th>No Of Aliquots</th>
                <th>Passage Number</th>
                <th>Recipient</th>
                <th>Recipient Name</th>
                <th>Recipient Address</th>
                <th>Reason For Dispatch</th>
                <th>Dispatched Date</th>
                <th>Dispatched By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ReportData)
            {
                <tr>
                    <td>@item.AVNumber</td>
                    <td>@item.Nomenclature</td>
                    <td>@item.NoOfAliquots</td>
                    <td>@item.PassageNumber</td>
                    <td>@item.RecipientName</td>
                    <td>@item.RecipientName</td>
                    <td>@item.RecipientAddress</td>
                    <td>@item.ReasonForDispatch</td>
                    <td>@item.DispatchedDate.ToString("d")</td>
                    <td>@item.DispatchedByName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results to display</p>
}

@section Scripts {
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd/mm/yy"
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}