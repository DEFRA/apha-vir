@model SenderListViewModel
@{
	ViewData["Title"] = "Sender Management | Virus Isolates Repository";
}

<section>
	<div class="mb-3">
		<br />
		<img src="~/images/chevron-rt-dkblue.gif" width="3" height="9" alt="" />
		<a asp-action="Create" class="btn btn-primary ml-2">Add new sender</a>
	</div>
</section>

<p>Edit an existing sender in the list by clicking on the links below.</p>
<div id="gridsenderResult">
	<partial name="_SenderList" for="@Model" />
</div>
@section Scripts {
	<script>
		$(document).on('click','.pagination a', function (e) {
			e.preventDefault();
			var pageNo=$(this).data('pageno');
			$.get('Sender/BindSenderGridOnPagination', {pageNo: pageNo, pageSize:10}, function (htmlData) {
			$('#gridsenderResult').html(htmlData);
			});
			});
	</script>
}