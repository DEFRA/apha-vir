@model VirusCharacteristicsModel
@{
}

<form asp-action="Edit" method="post">
	<input asp-for="Id" type="hidden" />
	<input asp-for="LastModified" type="hidden" />
	<div class="form-group d-flex align-items-center mb-3">
		<span for="Name" class="virusform_label">Name *</span>
		<input asp-for="Name" class="form-control w-200"  />
		<br /><span asp-validation-for="Name" class=" ms-2 text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<span for="CharacteristicType" class="virusform_label">CharacteristicType *</span>
		<select asp-for="CharacteristicType" asp-items="Model.CharacteristicTypeNameList" class="form-control"></select>
		<br /><span asp-validation-for="CharacteristicType" class="  ms-2 text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<span for="NumericSort" class="virusform_label">NumericSort</span>
		<input asp-for="NumericSort" type="checkbox" />
		<br /><span asp-validation-for="NumericSort" class="  ms-2 text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<span for="DisplayOnSearch" class="virusform_label">Display In Nomenclature</span>
		<input asp-for="DisplayOnSearch" type="checkbox" />
		<br /><span asp-validation-for="DisplayOnSearch" class=" ms-2 text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<span for="Prefix" class="virusform_label">Prefix</span>
		<input asp-for="Prefix" maxlength="50" />
		<br /><span asp-validation-for="Prefix" class=" ms-2 text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<span for="MinValue" class="virusform_label">MinValue</span>
		<input asp-for="MinValue" />
		<br /><span asp-validation-for="MinValue" class=" ms-2 text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<span for="MaxValue" class="virusform_label">MaxValue</span>
		<input asp-for="MaxValue" />
		<span asp-validation-for="MaxValue" class=" ms-2 text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<span for="DecimalPlaces" class="virusform_label">DecimalPlaces</span>
		<input asp-for="DecimalPlaces" />
		<br /><span asp-validation-for="DecimalPlaces" class=" ms-2 text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<span for="Length" class="virusform_label">Length</span>
		<input asp-for="Length" />
		<br /><span asp-validation-for="Length" class=" ms-2 text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<span for="CharacteristicIndex" class="virusform_label">Display Order *</span>
		<input asp-for="CharacteristicIndex" />
		<br /><span asp-validation-for="CharacteristicIndex" class=" ms-2 text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-lg-end mb-3">
		<img src="Images\spacer.gif" width="238" height="5" alt="" />
		<button type="submit" class="btnLink">Update</button>
		<img src="Images\spacer.gif" width="10" height="5" alt="" />
		<a asp-action="List" class="btn btn-secondary">Cancel</a>
		<img src="Images\spacer.gif" width="10" height="5" alt="" />
		<button type="submit"
				asp-action="Delete"
				class="btnLink me-3"
				onclick="return confirm('Please confirm that you want to delete this record');">
			Delete
		</button>
	</div>
</form>

@if (ViewBag.showsummary == true)
{
	<div class="validation">
		<p>There are validation messages requiring your attention.</p>
		<div asp-validation-summary="All" class="validation"></div>
	</div>
}

@if (Model.Id.ToString() != "")
{
	<dialog id="deleteModal" aria-labelledby="deleteModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					Please confirm that you wish to delete this Virus Characteristic from the database. This cannot be undone.
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
					<form asp-action="Delete" method="post">
						<input type="hidden" asp-for="Id" />
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</dialog>
}
@section Styles {
	<style>
		input[readonly] {
			background-color: #f5f5f5;
			border: 1px solid #ccc;
			color: #666;
		}
	</style>
}
@section Scripts {
	<script>
		function updateFields() {
			var typeText = $("#CharacteristicType option:selected").text();
			var numericSort = $("#NumericSort");
			var minValue = $("#MinValue");
			var maxValue = $("#MaxValue");
			var decimalPlaces = $("#DecimalPlaces");
			var length = $("#Length");

			if (typeText === "Text") {
				numericSort.prop("readonly", true);
				minValue.prop("readonly", true);
				maxValue.prop("readonly", true);
				decimalPlaces.prop("readonly", true);
				length.prop("readonly", false);
			} else if (typeText === "Numeric") {
				numericSort.prop("readonly", true);
				minValue.prop("readonly", false);
				maxValue.prop("readonly", false);
				decimalPlaces.prop("readonly", false);
				length.prop("readonly", true);
			} else if (typeText === "Yes/No") {
				numericSort.prop("readonly", true);
				minValue.prop("readonly", true);
				maxValue.prop("readonly", true);
				decimalPlaces.prop("readonly", true);
				length.prop("readonly", true);
			} else if (typeText === "SingleList") {
				numericSort.prop("readonly", false);
				minValue.prop("readonly", true);
				maxValue.prop("readonly", true);
				decimalPlaces.prop("readonly", true);
				length.prop("readonly", true);
			}
		}

		$(document).ready(function () {
			$("#CharacteristicType").change(updateFields);
			updateFields(); // Initial call
		});
	</script>
}
