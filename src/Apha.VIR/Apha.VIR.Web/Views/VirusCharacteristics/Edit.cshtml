@model VirusCharacteristicDetails
@{
	ViewData["Title"] = "Virus Characteristic Modification | Virus Isolates Repository";
}

<form asp-action="Edit" method="post">
	<input asp-for="Id" type="hidden" />
	<input asp-for="LastModified" type="hidden" />

	<table>
		<tr>
			<td><label asp-for="Name"></label></td>
			<td></td>
			<td>
				<input asp-for="Name" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</td>
		</tr>
		<tr>
			<td><label asp-for="CharacteristicType"></label></td>
			<td></td>
			<td>
				@* <select asp-for="CharacteristicType" asp-items="@(new SelectList(ViewBag.CharacteristicTypes, "Id", "Type"))" class="form-control"></select>
                <span asp-validation-for="CharacteristicType" class="text-danger"></span> *@
			</td>
		</tr>
		<tr>
			<td><label asp-for="NumericSort"></label></td>
			<td></td>
			<td>
				<input asp-for="NumericSort" type="checkbox" />
			</td>
		</tr>
		<tr>
			<td><label asp-for="DisplayOnSearch"></label></td>
			<td></td>
			<td>
				<input asp-for="DisplayOnSearch" type="checkbox" />
			</td>
		</tr>
		<tr>
			<td><label asp-for="Prefix"></label></td>
			<td></td>
			<td>
				<input asp-for="Prefix" maxlength="50" />
			</td>
		</tr>
		<tr>
			<td><label asp-for="MinValue"></label></td>
			<td></td>
			<td>
				<input asp-for="MinValue" />
				<span asp-validation-for="MinValue" class="text-danger"></span>
			</td>
		</tr>
		<tr>
			<td><label asp-for="MaxValue"></label></td>
			<td></td>
			<td>
				<input asp-for="MaxValue" />
				<span asp-validation-for="MaxValue" class="text-danger"></span>
			</td>
		</tr>
		<tr>
			<td><label asp-for="DecimalPlaces"></label></td>
			<td></td>
			<td>
				<input asp-for="DecimalPlaces" />
				<span asp-validation-for="DecimalPlaces" class="text-danger"></span>
			</td>
		</tr>
		<tr>
			<td><label asp-for="Length"></label></td>
			<td></td>
			<td>
				<input asp-for="Length" />
				<span asp-validation-for="Length" class="text-danger"></span>
			</td>
		</tr>
		<tr>
			<td><label asp-for="CharacteristicIndex"></label></td>
			<td></td>
			<td>
				<input asp-for="CharacteristicIndex" />
				<span asp-validation-for="CharacteristicIndex" class="text-danger"></span>
			</td>
		</tr>
		<tr>
			<td colspan="3" class="text-right">
				<button type="submit" class="btn btn-primary">Save</button>
				<a asp-action="Index" class="btn btn-secondary">Cancel</a>
				@if (Model.Id.ToString() != "")
				{
					<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
				}
			</td>
		</tr>
	</table>
</form>

@if (!ViewData.ModelState.IsValid)
{
	<div class="alert alert-danger">
		<p>There are validation messages requiring your attention.</p>
		<div asp-validation-summary="All" class="text-danger"></div>
	</div>
}

@if (Model.Id.ToString() != "")
{
	<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					Please confirm that you wish to delete this Virus Characteristic from the database. This cannot be undone.
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
					<form asp-action="Delete" method="post">
						<input type="hidden" asp-for="Id" />
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</div>
}
