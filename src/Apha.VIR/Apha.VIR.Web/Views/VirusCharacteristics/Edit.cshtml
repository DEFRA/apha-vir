@model VirusCharacteristicDetails
@{
}

<form asp-action="Edit" method="post">
	<input asp-for="Id" type="hidden" />
	<input asp-for="LastModified" type="hidden" />
	<div class="form-group d-flex align-items-center mb-3">
		<label for="Name" style="min-width: 150px; margin: 0; margin-right: 12px;">Name *</label>
		<input asp-for="Name" class="form-control" style="width: 200px;" />
		<br /><span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<label for="CharacteristicType" style="min-width: 150px; margin: 0; margin-right: 12px;">CharacteristicType *</label>
		<select asp-for="CharacteristicType" asp-items="Model.CharacteristicTypeNameList" class="form-control"></select>
		<br /><span asp-validation-for="CharacteristicType" class="text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<label for="NumericSort" style="min-width: 150px; margin: 0; margin-right: 12px;">NumericSort *</label>
		<input asp-for="NumericSort" type="checkbox" />
		<br /><span asp-validation-for="NumericSort" class="text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<label for="DisplayOnSearch" style="min-width: 150px; margin: 0; margin-right: 12px;">DisplayOnSearch *</label>
		<input asp-for="DisplayOnSearch" type="checkbox" />
		<br /><span asp-validation-for="DisplayOnSearch" class="text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<label for="Prefix" style="min-width: 150px; margin: 0; margin-right: 12px;">Prefix *</label>
		<input asp-for="Prefix" maxlength="50" />
		<br /><span asp-validation-for="Prefix" class="text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<label for="MinValue" style="min-width: 150px; margin: 0; margin-right: 12px;">MinValue *</label>
		<input asp-for="MinValue" />
		<br /><span asp-validation-for="MinValue" class="text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<label for="MaxValue" style="min-width: 150px; margin: 0; margin-right: 12px;">MaxValue *</label>
		<input asp-for="MaxValue" />
		<span asp-validation-for="MaxValue" class="text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<label for="DecimalPlaces" style="min-width: 150px; margin: 0; margin-right: 12px;">DecimalPlaces *</label>
		<input asp-for="DecimalPlaces" />
		<br /><span asp-validation-for="DecimalPlaces" class="text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<label for="Length" style="min-width: 150px; margin: 0; margin-right: 12px;">Length *</label>
		<input asp-for="Length" />
		<br /><span asp-validation-for="Length" class="text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-center mb-3">
		<label for="CharacteristicIndex" style="min-width: 150px; margin: 0; margin-right: 12px;">CharacteristicIndex *</label>
		<input asp-for="CharacteristicIndex" />
		<br /><span asp-validation-for="CharacteristicIndex" class="text-danger"></span>
	</div>
	<div class="form-group d-flex align-items-lg-end mb-3">
		<img src="Images\spacer.gif" width="300" height="5" alt="" />
		<button type="submit" class="btn-as-link">Update</button>
		<img src="Images\spacer.gif" width="10" height="5" alt="" />
		<a asp-action="Index" class="btn btn-secondary">Cancel</a>
		<img src="Images\spacer.gif" width="10" height="5" alt="" />
		<button type="submit"
				asp-action="Delete"
				class="btn-as-link me-3"
				onclick="return confirm('Please confirm that you want to delete this record');">
			Delete
		</button>
	</div>
</form>

@if (!ViewData.ModelState.IsValid)
{
	<div class="alert alert-danger">
		<p>There are validation messages requiring your attention.</p>
		<div asp-validation-summary="All" class="text-danger"></div>
	</div>
}

@if (Model.Id.ToString() != "")
{
	<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					Please confirm that you wish to delete this Virus Characteristic from the database. This cannot be undone.
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
					<form asp-action="Delete" method="post">
						<input type="hidden" asp-for="Id" />
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</div>
}
